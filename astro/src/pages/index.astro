---
import '../styles/global.css';
import { getCollection } from 'astro:content';
const plans = await getCollection('plans');
---

<html lang="en">
  <body class="bg-gray-50 min-h-screen p-12 font-sans">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">Project Plans</h1>
      <ul class="bg-white shadow rounded-lg divide-y">
        {plans.map(plan => (
          <li>
            <a href={`/${plan.id}`} class="block p-6 hover:bg-blue-50 transition">
              <span class="text-lg font-medium text-blue-600">{plan.id}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </body>
</html>
