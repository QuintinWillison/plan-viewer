---
import '../styles/global.css';

interface Props {
  title: string;
  bodyClass?: string;
}

const { title, bodyClass = 'bg-white text-slate-900' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class={`min-h-screen p-12 ${bodyClass}`}>
    <div class="max-w-3xl mx-auto">
      <slot />
    </div>
  </body>
</html>
